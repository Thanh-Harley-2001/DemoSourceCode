@model Contact

<main>
    <section id="contact">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-md-6 form">
                    <form asp-route="Contact">
                        <h1>
                            Liên Hệ
                        </h1>
                        <div class="form-group">
                            <input asp-for="FullName"  class="form-control" type="text" placeholder="Họ tên quý khách..." />
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" type="text" placeholder="Emai liên hệ..." />
                        </div>
                        <div class="form-group">
                            <input asp-for="Mobi" class="form-control" type="text" placeholder="Số điện thoại liên lạc..." />
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Content" class="form-control" rows="7" placeholder="Nội dung cần liên hệ..."></textarea>
                        </div>

                        <message class="@ViewBag.MessageClass">
                            @ViewBag.MessageText
                        </message>

                        <div class="form-group">
                            <input type="submit" class="btn btn-warning" value="Gửi thư liên hệ" />
                        </div>
                    </form>
                </div>
                <div class="col-12 col-md-6 info">
                    <div>
                        <p>
                            Hãy liên hệ để được tư vấn những dịch vụ tốt nhất một cách miễn phí!
                        </p>

                        <p>
                            <i class="fa fa-home"></i>
                            CÔNG TY TNHH MTV TM DV TÀU THUYỀN VIỆT
                        </p>

                        <p>
                            <i class="fa fa-map-marker"></i>
                            1441 Nguyễn Chí Thanh, P.Tân An, TP.Thủ Dầu Một, Bình Dương
                        </p>

                        <p>
                            <i class="fa fa-phone"></i>
                            0650 3 899 889
                        </p>

                        <p>
                            <i class="fa fa-envelope"></i>
                            Email: kennguyen20@gmail.com
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>