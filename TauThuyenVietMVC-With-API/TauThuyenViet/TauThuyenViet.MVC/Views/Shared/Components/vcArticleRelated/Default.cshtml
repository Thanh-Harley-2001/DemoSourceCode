@model List<Article>

<aside>
    <h2>
        CÁC TIN TỨC KHÁC
    </h2>
    <ul class="row article-other">
        @foreach (var item in Model)
        {
            <li class="col-6 col-lg-4">
                <a asp-route-id="@item.ArticleID" 
                   asp-route-title="@item.Title.ToUrlFormat()" 
                   asp-route="ArticleDetail">
                    <img class="img-fluid img-thumbnail" src="@item.Avatar" />
                    <span>
                        @item.Title
                    </span>
                </a>
            </li>
        }
    </ul>
</aside>